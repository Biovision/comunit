<figure class="image"><%= simple_image_preview(entity) %></figure>
<div class="data">
  <div><%= admin_entity_link(entity) %></div>
  <% unless entity.user.blank? %>
    <div class="info"><%= admin_entity_link(entity.user) %></div>
  <% end %>

  <%= render(partial: 'shared/admin/toggle', locals: { entity: entity }) %>

  <div class="entity-actions">
    <%= world_icon(entity) if entity.visible? %>
    <%= edit_icon(entity) %>
    <%= destroy_icon(entity) %>
  </div>
</div>
