<div class="posts__preview js-wide-click" data-url="<%= entity.world_url %>">
  <figure>
    <div class="image"><%= simple_image_small(entity) %></div>
    <figcaption><%= entity_link(entity) %></figcaption>
  </figure>
  <div class="info">
    <p class="lead"><%= entity.lead %></p>
    <%= entity_link(entity.user, nil, class: 'author') %>
    <%= time_tag(entity.publication_time) %>
  </div>
</div>
